{
  "name": "platzi-webpack",
  "version": "1.0.0",
  "description": "Curso de Webpack de Platzi",
  "main": "index.js",
  "scripts": {
    "build": "webpack index.js --mode development",
    "build:local": "webpack --mode development",
    "build:external": "webpack --mode development --config ./external/webpack.config.js",
    "build:css": "webpack --mode development --config ./css-style-loaders/webpack.config.js",
    "build:extract:css": "webpack --mode development --config ./plugin-extract-text/webpack.config.js",
    "build:multi": "webpack --mode development --config ./multiples-entry-points/webpack.config.js",
    "build:dev": "webpack-dev-server --mode development --config ./webpack-dev-server/webpack.config.js",
    "build:babel": "webpack --mode development --config ./babel-loader/webpack.config.js",
    "build:images": "webpack --mode development --config ./url-loader-images/webpack.config.js",
    "build:fonts": "webpack --mode development --config ./url-loader-fonts/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hecto932/platzi-webpack.git"
  },
  "author": "Hector Flores <hecto932@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hecto932/platzi-webpack/issues"
  },
  "homepage": "https://github.com/hecto932/platzi-webpack#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  }
}
